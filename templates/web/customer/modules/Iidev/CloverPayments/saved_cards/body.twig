 # saved cards
 #}
<div class="dialog-content saved-cards-container">

	{% if this.getCards() %}

		{% include 'modules/Iidev/CloverPayments/saved_cards/cards.table.twig' %}

	{% else %}

		{% include 'modules/Iidev/CloverPayments/saved_cards/cards.empty.twig' %}

	{% endif %}

	{% if this.isSaveCardsAllowed() %}
		<div class="add-new-card-button{% if not this.getCards() %} text-center{% endif %}">
			{{ widget('\\Iidev\\CloverPayments\\View\\Button\\AddNewCard', label=t('Add new card'), style='main-button', profileId=this.get('profile_id'), amount=1) }}
		</div>
	{% elseif this.isSaveCardsLimitReached() %}
		{{ t('You\'ve reached the maximal amount of saved cards. If you want to add a new card, please remove the unused cards.') }}
  {% endif %}

</div>
