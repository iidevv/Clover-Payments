{##
 # X-Payments Saved cards table 
 #}
{% form '\\Iidev\\CloverPayments\\View\\Form\\Cards' %}
	<table class="cards" style="margin-bottom: 30px;">
		{% for card in this.getCards() %}
			<tr>
				<td class="title-column">
					{{ widget('\\Iidev\\CloverPayments\\View\\Card', card=card) }}
				</td>

				{% if not this.isSubscriptionCard(card.card_id) %}
					<td class="remove-column">
						{{ widget('\\XLite\\View\\Button\\ConfirmRegular', confirmText=t('Are you sure you want to delete this card?'), label=t('Delete'), title=t('Delete card'), style='delete-card', action='remove', formParams={'card_id': card.card_id} ) }}
					</td>
				{% else %}
					<td>
						{{ t('This credit card is used for a subscription. To remove it, you need to cancel the subscription first.') }}
					</td>
				{% endif %}
			</tr>
		{% endfor %}
	</table>
{% endform %}
